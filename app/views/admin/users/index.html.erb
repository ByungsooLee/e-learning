<div class="bg-image"></div>

<div class="bg-text">
    <h1 class="text-center">Administrater Usres</h1>
    <div class="border-top p-3"></div>

    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">E-mail</th>
                <th scope="col">Admin</th>
            </tr>
        </thead>
        <tbody>
            <% @users.each do |user| %>
                <tr>
                    <td scope="row"><%= user.name%></td>
                    <td><%= user.email%></td>
                    <td>
                        <% if user.is_admin? %>
                            <%= button_to "Remove", admin_user_path(user), method: :delete, class: "btn" %>
                        <% else %>
                            <%= button_to "Add", admin_user_path(user), method: :patch, class: "btn" %>
                        <% end %>
                    </td>
                </tr>
            <% end %>
            <div class="paginate text-center border-top pt3">
                <%= will_paginate%>
            </div>
        </tbody>
    </table>
</div>