<div class="bg-image"></div>

    <div class="bg-text">
        <h1 class="text-center"><%= @category.title%></h1>
        <%= link_to "New Words", new_admin_category_word_path(@category), class: "btn"%>       
        <div class="border-top p-3"></div>
            <table class="table table-striped table-dark">
                <thead>
                    <tr>
                        <th scope="col">Word</th>
                        <th scope="col">Answer</th>
                        <th scope="col">Settings</th>
                    </tr>
                </thead>
                <tbody>
                    <% @words.each do |word| %>
                        <tr>
                            <td><%= word.content %></td> 
                            <td><%= word.correct_answer.content%></td>
                            <td><%= link_to "edit", edit_admin_category_word_path(@category, word) %> / <%= link_to "delete", admin_category_word_path(@category, word), method: :delete, data: {confirm: "Are you sure?"}%></td> 
                        </tr>
                    <% end %>
                </tbody>
            </table>
            <div class="paginate text-center border-top pt3">
            </div>
    </div>
</div>


