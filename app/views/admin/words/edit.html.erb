
<div class="bg-image"></div>


<div class="bg-text">
    <div class="offset-md-3 col-md-6">

        <h1 class="text-center">Edit Words</h1>

        <%= form_for([:admin, @category, @word]) do |f| %>

            <%= render "shared/error_message", object:f.object %>

            <div class="form-group">
                <%= f.label :Word, class:"text-white" %><br>
                <%= f.text_field :content,class:"form-control" %>
            </div>

            <%= f.label :choices, class:"text-white" %><br>
            <%= f.fields_for :choices do |c| %>
                <div class="form-group">
                    <%= c.text_field :content,class:"form-control" %>
                </div>
                <div class="form-group">
                    <%= c.check_box :is_correct %>
                    <%= c.label :is_correct, "This is the asnwer", class:"text-white" %>
                </div>
            <% end %>

            <%= f.submit "Edit Words", class:"btn btn-primary vtn-block" %>
        <% end %>
    </div> 
</div>