<div class="bg-image"></div>

    <div class="bg-text">
        <h1><%= @category.title %></h1>
        <h2 class="text-center">Result <%= @lesson.correct_answers %> / <%= @lesson.answers.count %></h2>
        <div class="border-top p-3"></div>
            <table class="table table-striped table-dark">
                <thead>
                    <tr>
                        <th scope="col">Word</th>
                        <th scope="col">Answer</th>
                        <th scope="col">Correct</th>
                    </tr>
                </thead>
                <tbody>
                    <% @lesson.answers.each do |answer| %>
                        <tr>
                            <td><%= answer.word.content %></td>
                            <td><%= answer.choice.content %></td>
                            <td><%= answer.word.choices.find_by(is_correct: true).content %></td>
                            <td>
                                <% if answer.choice.is_correct? %>
                                    <%= "◯" %>
                                <% else %>
                                    <%= "×" %>
                                <% end %>
                            </td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
            
    </div>
</div>



