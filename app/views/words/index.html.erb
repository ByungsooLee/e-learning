<div class="bg-image"></div>

    <div class="bg-text">
        <div class="dropdown">
            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <% if @category %>
                    <%= @category.title %>
                <% else %>
                    All
                <% end %>
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <%= link_to "All", words_path, class: "dropdown-item" %>
                <% @categories.each do |category| %>
                    <%= link_to category.title, words_path(category: category), class: "dropdown-item" %>
                <% end %>
            </div>
        </div>
        <div class="border-top p-3"></div>
            <table class="table table-striped table-dark">
                <thead>
                    <tr>
                        <th scope="col">Word</th>
                        <th scope="col">Answer</th>
                        <th scope="col">Correct</th>
                    </tr>
                </thead>
                <tbody>
                    <% @words.each do |answer| %>
                        <tr>
                            <td><%= answer.word.content %></td>
                            <td><%= answer.choice.content %></td>
                            <td><%= answer.word.choices.find_by(is_correct: true).content %></td>
                            <td>
                                <% if answer.choice.is_correct? %>
                                    <%= "◯" %>
                                <% else %>
                                    <%= "×" %>
                                <% end %>
                            </td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
            
    </div>
</div>



